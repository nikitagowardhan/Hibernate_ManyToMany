<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">
 
 <hibernate-mapping>
   <class name = "www.asterisc.in.Hibernate_ManyToMany.model.Question" table="q	uestion_table" >
   
   <id name="id" type="int" column name="q_id">  
            <generator class="increment" />  
        </id>  
        
       
     <property name="name" column="qname"/>
     
     <List name="answers" table="question_table" fetch="select" cascade="all">
     <key column="q_id"></key>  
       <index column="type"></index>   
            <many-to-many class="www.asterisc.in.Hibernate_ManyToMany.model.Answer" column="ans_id" /> 
         
         
     </List>     
       
   </class> 
     
     
 </hibernate-mapping>